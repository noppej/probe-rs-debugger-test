{
    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "esp32c3",
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "probe-rs esp32c3",
            // "server": "127.0.0.1:50001", // For connecting to an existing probe-rs-debugger process
            "cwd": "${workspaceFolder}", // TODO: Update with project name
            // TODO: Update with binary name
            // TODO: Update target folder
            "programBinary": "${workspaceFolder}/target/riscv32imc-unknown-none-elf/debug/esp32c3",
            "chip": "esp32c3", // TODO: Update with chip name
            "coreIndex": 0,
            "runtimeExecutable": "probe-rs-debugger",
            "connectUnderReset": true,
            "flashingEnabled": true,
            "resetAfterFlashing": true,
            "haltAfterReset": false,
            "rttEnabled": true,
            "rttChannelFormats": [
                {
                    "channelNumber": 0,
                    "showTimestamps": true
                }
            ],
            "consoleLogLevel": "Debug",
            "speed": 24000 // TODO: Optionally update USB speed
        }
    ]
}