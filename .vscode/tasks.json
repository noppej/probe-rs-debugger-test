{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "debug-no-opt",
      "type": "cargo",
      "command": "build",
      "args": [
        "--bin",
        "${fileBasenameNoExtension}",
        "--features",
        "${fileBasenameNoExtension}",
        "--target",
        "${fileDirnameBasename}",
        "--profile",
        "debug-no-opt",
      ],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "revealProblems": "onProblem",
        "reveal": "silent",
        "showReuseMessage": false,
        "clear": true,
        "close": false,
        "panel": "shared"
      }
    },
